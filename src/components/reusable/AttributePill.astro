---
import { Icon } from "astro-icon/components";

interface Props {
  label: string
  mdiIcon: string
  value: number
}
const { label, mdiIcon, value }: Props = Astro.props;
---


<li>
  <div class="flex gap-3 bg-slate-200 rounded-2xl p-2 px-3 w-auto items-center">
    <Icon name=`mdi:${mdiIcon}` />
    <h2>{value} {label}</h2>
  </div>
</li>