---
import TopShadow from '../TopShadow.astro';

interface Props {
  id: string
  topShadow?: boolean
  contentWidth?: 'large' | 'small'
}

const { id, topShadow=false, contentWidth='large' }: Props = Astro.props;
---


<section id={id} class="relative flex flex-col items-center w-full">
  <div class="max-w-[85rem] py-10 flex flex-col gap-5 items-center text-center px-5">
    <slot name="title" />
    <div class=`${contentWidth === 'large' ? '' : 'max-w-[55rem]'} flex flex-col gap-5 items-center text-lg md:text-xl`>
      <slot />
    </div>
  </div>
  {topShadow && <TopShadow />}
</section>