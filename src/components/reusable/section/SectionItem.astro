  title: string
}

const { emoji, title }: Props = Astro.props;
---


<div class="flex flex-col lg:flex-row items-center text-lg text-center">
  <div class="flex items-center gap-3 text-nowrap">
    <!-- <span class="text-2xl">üè†</span> -->
