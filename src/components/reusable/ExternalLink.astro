---
import { Icon } from "astro-icon/components";

interface Props {
  href: string;
  textWhite?: boolean;
}

const { href, textWhite=false }: Props = Astro.props;
---

<a target="_blank" rel="noopener noreferrer" href={href}>
  <div class="flex flex-col gap-2 items-center h-full">
    <slot name="image" />
    <div class=`flex gap-2 items-center ${textWhite ? 'text-white' : 'text-blue-500'} h-full`>
      <slot />
      <Icon name="mdi:launch" />
    </div>
  </div>
</a>
