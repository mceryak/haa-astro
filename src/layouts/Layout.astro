---
import Navigation from "@/components/static/Navigation.astro";
import Footer from '@/components/Footer.astro';
// Supports weights 100-900
import '@fontsource-variable/outfit';

interface Props {
  bgClass?: string
  activePage: 'Contact' | 'About' | 'FAQ' | 'Finance' | 'Services' | 'Carports' | 'Homes' | ''
}

const { bgClass="bg-white", activePage='' } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
    <!-- {noCache && <meta http-equiv="cache-control" content="no-cache, no-store, must-revalidate, max-age=0" />} -->
		<title>Astro Basics</title>
	</head>
	<body>
    <Navigation activePage={activePage}/>
    <slot name="hero" />
    <main id="main-content" class=`min-h-[75vh] ${bgClass}`>
      

        <slot />

    </main>
    <Footer />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
