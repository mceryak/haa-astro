    <ul
      class=" grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-5 text-lg"
    >
      {
        testimonials.map((t) => (
          <li class="">
            <a
              href={t.link}
              target="_blank"
              rel="noopener noreferrer"
              class="p-3  flex flex-col gap-2 bg-slate-100 h-full shadow-black/50 shadow-xl  rounded-sm cursor-pointer hover:scale-[101%] transition-transform max-h-80 "
            >
              <div class="flex justify-between text-xl gap-5">
                <h2 class=" font-semibold">{t.name}</h2>
                <p>⭐️⭐️⭐️⭐️⭐️</p>
              </div>
              <p class="italic line-clamp-9">"{t.description}"</p>
            </a>
          </li>
        ))
      }
    </ul>
