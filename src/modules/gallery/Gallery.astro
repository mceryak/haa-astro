---
import GalleryItem from './GalleryItem.astro';

interface Props {
  photos: { src: string }[]
}

const { photos }: Props = Astro.props;
---

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-3 items-center">
  {photos.map((photo, idx) => <GalleryItem src={photo.src} idx={idx} />)}
</div>
